#!/bin/bash

bin=$(dirname $0)

$bin/go get github.com/golang/lint/golint

errors=$(
  $bin/gofiles golint \
    | grep -v 'should have comment.* or be unexported'      \
    | grep -v '/mocks/'                                     \
    | grep -v 'should not be capitalized'
)

if [ "$(echo -n "$errors")" != "" ]; then
  echo "$errors"
  exit 1
fi
